<div class="container mt-4">
  <div class="row gy-4 align-items-center mb-6">
    <div class="col-xl-7 col-lg-12 col-md-8">
      <h2> Movie List</h2>
    </div>
    <div class="col-xl-5 col-lg-12 col-md-4 text-xl-end text-lg-start text-md-end">
      <%= link_to "Booking List", user_bookings_path, class: "btn btn-lg py-3 btn-dark" %>
    </div>
  </div>

  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-3">
        <div class="card movie-card mb-4 pt-20 background-no-repeat bg-center bg-cover" style="background-image: url('<%= asset_path 'move.jpeg' %>');">
          <div class="card-body">
            <h5 class="card-title mb-2">
              <%= link_to "#{movie.title.capitalize}", movie_path(movie.id), class: "card-link text-light stretched-link" %>
            </h5>
            <p class="card-text text-gray-200">
              <b>Genre:</b> <%= movie.genre %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
