<div class="container mt-4">
  <div class="row gy-6 align-items-center my-4">
    <div class="col-lg-6">
      <h2 class="text-gray-700">Movie Lists</h2>
    </div>
  </div>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "#{movie.title.capitalize}", movie_path(movie.id), class: "card-link" %>
            </h5>
            <p class="card-text">
              <b>Genre:</b> <%= movie.genre %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
