<div class="container">
  <h3 class="p-3 my-4 bg-gray-200 text-dark text-center">Show List for <%= @movie.title %> Below</h3> 
  <div class="row gy-6">
    <% @movie.shows.each do |show| %>
      <% if show.show_time >= Date.today %>
        <div class="col-md-4">
          <div class="card text-center">
            <div class="card-body">
              <h4 class="font-bold mb-4">Book Your Ticket here</h4>
              <%= link_to show.show_time.strftime("%B %d, %Y %I:%M %p"), show_path(show), class: "btn btn-dark" %>
            </div>
            <div class="card-footer text-muted">
              <h3 class="text-red-500">Hurry up, only a few seats are left!</h3>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>